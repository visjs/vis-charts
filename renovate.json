{
  "extends": ["config:base"],
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "@egjs/hammerjs",
        "component-emitter",
        "hammerjs",
        "keycharm",
        "moment",
        "propagating-hammerjs",
        "uuid",
        "vis-data",
        "vis-graph3d",
        "vis-network",
        "vis-timeline",
        "vis-util"
      ],
      "matchDepTypes": ["devDependencies"],
      "semanticCommitType": "fix"
    }
  ]
}
